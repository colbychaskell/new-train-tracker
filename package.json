{
  "name": "new-train-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd server && pipenv install",
    "build-elm": "cd elm && elm make src/Main.elm --output ../js/elm.js",
    "watch-elm": "chokidar elm/src/ -c 'npm run build-elm'",
    "start-python": "cd server && pipenv run python3 server.py",
    "start": "concurrently npm:start-python npm:watch-elm",
    "format": "cd elm && elm-format . --yes",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitmatters/new-train-tracker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/transitmatters/new-train-tracker/issues"
  },
  "homepage": "https://github.com/transitmatters/new-train-tracker#readme",
  "dependencies": {
    "elm": "^0.19.0-bugfix6",
    "elm-format": "^0.8.1"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0"
  }
}
